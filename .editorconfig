root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 4 space indentation
[*.js]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
indent_style = space
indent_size = 4

[makefile]
indent_style = tab

[*.lps]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[{package.json,.*.yml}]
indent_style = space
indent_size = 2
